				>
				["at0002.1"] = <
					text = <"Recomendación terapéutica">
					description = <"Descripción narrativa del tratamiento más eficaz basado en una evaluación previa de DR.">
				>
				["at0003"] = <
					text = <"*Rationale(en)">
