  <ontology>
    <term_definitions language="en">
      <items code="at0000">
        <items id="text">AVPU</items>
        <items id="description">Simple scale used as part of an assessment to measure and record a patient's responsiveness, indicating their level of consciousness. AVPU is an acronym for 'Alert', 'Voice', 'Pain', 'Unresponsive'.</items>
      </items>
      <items code="at0001">
        <items id="text">Event Series</items>
        <items id="description">@ internal @</items>
      </items>
      <items code="at0002">
        <items id="text">Any event</items>
        <items id="description">Default, unspecified point in time or interval event which may be explicitly defined in a template or at run-time.</items>
      </items>
      <items code="at0003">
        <items id="text">Tree</items>
        <items id="description">@ internal @</items>
      </items>
      <items code="at0004">
        <items id="text">AVPU Observation</items>
        <items id="description">The observation of the patient's responsiveness.</items>
      </items>
      <items code="at0005">
        <items id="text">Alert</items>
        <items id="description">The patient is fully awake and alert.</items>
      </items>
      <items code="at0006">
        <items id="text">Voice</items>
        <items id="description">The patient responds in any way to a voice stimulus.</items>
      </items>
      <items code="at0007">
        <items id="text">Pain</items>
        <items id="description">The patient responds in any way to a pain stimulus.</items>
      </items>
      <items code="at0008">
        <items id="text">Unresponsive</items>
        <items id="description">The patient does not respond in any way to voice or pain stimuli.</items>
      </items>
    </term_definitions>
    <term_definitions language="nb">
      <items code="at0000">
        <items id="text">AVPU</items>
        <items id="description">En enkel skala anvendt til at vurdere og registrere en pasients reaksjon som mål for bevissthetsnivå. AVPU er en forkortelse for "Alert" (vaken), "Voice" (tale), "Pain" (smerte), "unresponsive" (ikke reagerende).</items>
      </items>
      <items code="at0001">
        <items id="text">Event Series</items>
        <items id="description">@ internal @</items>
      </items>
      <items code="at0002">
        <items id="text">Enhver hendelse</items>
        <items id="description">Standard, uspesifisert tidspunkt eller intervall som kan defineres i en mal eller i et forløp.</items>
      </items>
      <items code="at0003">
        <items id="text">Tree</items>
        <items id="description">@ internal @</items>
      </items>
      <items code="at0004">
        <items id="text">AVPU observasjon</items>
        <items id="description">Observasjon av pasientens reaksjoner.</items>
      </items>
      <items code="at0005">
        <items id="text">Vaken</items>
        <items id="description">Pasienten er vaken.</items>
      </items>
      <items code="at0006">
        <items id="text">Tale</items>
        <items id="description">Pasienten reagerer på et eller annet vis på tiltale.</items>
      </items>
      <items code="at0007">
        <items id="text">Smerter</items>
        <items id="description">Pasienten reagerer på et eller annet vis på tsmerter.</items>
      </items>
      <items code="at0008">
        <items id="text">Ikke reagerende</items>
        <items id="description">Pasienten reagerer ikke på tale eller smerte stimuli.</items>
      </items>
    </term_definitions>
  </ontology>
